<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgUkulele"
            android:layout_width="320dp"
            android:layout_height="150dp"
            android:layout_margin="20dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ukulele"
            android:contentDescription="@string/ukulele"/>

        <Button
            android:id="@+id/btnUkulele"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_below="@id/imgUkulele"
            android:layout_centerHorizontal="true"
            android:text="@string/btnUkulele"
            android:textSize="22sp"/>

        <ImageView
            android:id="@+id/imgDrums"
            android:layout_width="320dp"
            android:layout_height="150dp"
            android:layout_margin="20dp"
            android:layout_below="@id/btnUkulele"
            android:layout_centerHorizontal="true"
            android:src="@drawable/drums"
            android:contentDescription="@string/drums"/>

        <Button
            android:id="@+id/btnDrums"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_below="@id/imgDrums"
            android:layout_centerHorizontal="true"
            android:text="@string/btnDrums"
            android:textSize="22sp"/>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>