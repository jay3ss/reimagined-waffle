<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgWaves"
            android:layout_width="320dp"
            android:layout_height="150dp"
            android:layout_margin="20dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/waves"
            android:contentDescription="@string/waves"/>

        <Button
            android:id="@+id/btnWaves"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_below="@id/imgWaves"
            android:layout_centerHorizontal="true"
            android:text="@string/btnWaves"
            android:textSize="22sp"/>

        <ImageView
            android:id="@+id/imgFan"
            android:layout_width="320dp"
            android:layout_height="150dp"
            android:layout_margin="20dp"
            android:layout_below="@id/btnWaves"
            android:layout_centerHorizontal="true"
            android:src="@drawable/fan"
            android:contentDescription="@string/fan"/>

        <Button
            android:id="@+id/btnFan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_below="@id/imgFan"
            android:layout_centerHorizontal="true"
            android:text="@string/btnFan"
            android:textSize="22sp"/>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>